<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/grey"
    tools:context=".activity.DetailEvent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBackground"
        android:src="@color/primaryTextColor"
        android:layout_width="1500px"
        android:layout_height="500px" />

    <ImageView
        android:id="@+id/imgFoto"
        android:src="@drawable/buttonabu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_width="600px"
        android:layout_height="400px" />

    <LinearLayout
        android:layout_below="@+id/imgFoto"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtNama"
            android:text="Sosialisasi Pangan"
            android:textColor="@color/primaryTextColor"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"/>

        <TextView
            android:id="@+id/txtDeskrpisi"
            android:text="sosialisai pangan event ini dilakukan dalam rangka
            memperingati hari panan sedunia"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <ImageView
                android:src="@drawable/timeblue"
                android:layout_width="50px"
                android:layout_height="50px"/>

            <TextView
                android:text="Waktu"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txtWaktu"
            android:text="25-02-1999 09:00:00"
            android:textSize="13sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <ImageView
                android:src="@drawable/markerblue"
                android:layout_width="50px"
                android:layout_height="50px"/>

            <TextView
                android:text="Alamat"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txtAlamat"
            android:text="Jl. Veteran No 55 Padang"
            android:textSize="13sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnDaftar"
            style="@style/loginButton"
            android:text="Daftar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

    </LinearLayout>

</RelativeLayout>
</ScrollView>