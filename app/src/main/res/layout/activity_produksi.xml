<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp">

        <TextView
            android:text="Nama Produk"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNamaProduk"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Kapasitas Produksi"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtKapasitasProduk"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Jumlah Produksi"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtJmlh"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Satuan"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtSatuan"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Nilai Produksi (Dalam Rp)"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNilaiProduksi"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Nilai Penjualan (Dalam Rp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNilaiPenjualan"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Tahun"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtTahun"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

    </LinearLayout>
</ScrollView>