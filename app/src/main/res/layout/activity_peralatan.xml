<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp">

        <TextView
            android:text="Nama Mesin"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNamaMesin"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Merek"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtMerek"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Tahun"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtTahun"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Negara Asal"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNegara"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Spesifikasi"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtSpesifikasi"
            style="@style/modifiedEditText"
            android:inputType="text|textMultiLine"/>

        <TextView
            android:text="Jumlah"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtJumlah"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Satuan"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtSatuan"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Harga (Dalam Rp)"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtHarga"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

    </LinearLayout>
</ScrollView>