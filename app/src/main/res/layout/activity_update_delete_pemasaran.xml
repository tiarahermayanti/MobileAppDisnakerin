<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateDeletePemasaran">

    <TextView
        android:text="Tenaga Kerja Pria"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTkp"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Tenaga Kerja Wanita"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTkw"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Investasi"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtInvestasi"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Pemasaran Lokal"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtLokal"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Pemasaran Luar Daerah"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtLuar"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Ekspor"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtEkspor"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Tahun"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTahun"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUpdate"
            android:textColor="@color/white"
            android:text="Simpan"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:background="@color/primaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnHapus"
            android:textColor="@color/white"
            android:text="Hapus"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
</ScrollView>