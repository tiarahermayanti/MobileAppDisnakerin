<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="7dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="7dp">


    <TextView
        android:text="Tenaga Kerja Pria"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/edtTkp"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Tenaga Kerja Wanita"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTkw"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Investasi"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtInvestasi"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Pemasaran Lokal"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtLokal"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Pemasaran Luar Daerah"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtLuar"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Ekspor"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtEkspor"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Tahun"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTahun"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

</LinearLayout>
</ScrollView>