<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
style="@style/loginCard"
app:cardCornerRadius="@dimen/loginCardRadius"
android:elevation="5dp"
android:layout_gravity="center"
android:layout_marginTop="@dimen/loginViewsMargin"
android:layout_marginBottom="@dimen/loginViewsMargin"
android:background="@color/whiteCardColor">

<LinearLayout
    style="@style/linearParent"
    android:layout_gravity="center"
    android:padding="@dimen/loginViewsMargin">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <ImageView
            android:src="@drawable/ic_satu"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            style="@style/headerTextPrimary"
            android:text="DETAIL INDUSTRI"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="Nama Perusahaan"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNama"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

    <TextView
        android:text="Bentuk Usaha"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/spinBnetukUsaha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>


    <TextView
        android:text="Direktori Potensi"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinDirektoripotensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:text="Kbli"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/Spinkbli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:text="Tahun Izin"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTahun"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Jenis Produk"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtJenisProduk"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Legalitas"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinLegalitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:src="@drawable/ic_dua"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                style="@style/headerTextPrimary"
                android:text="BIODATA"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <TextView
        android:text="Pimpinan"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtPimpinan"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>



    <TextView
        android:text="Upload Foto Bangunan Industri"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnPilihFoto"
        android:text="Pilih Foto"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:src="@color/primaryTextColor"
            android:layout_width="80px"
            android:layout_height="80px" />

    </LinearLayout>

    <TextView
        android:text="Telepon"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTelp"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Pilih Lokasi"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnKoor"
        android:text="Pilih Lokasi"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Alamat"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtAlamat"
        style="@style/modifiedEditText"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:text="Kecamatan"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinKecamatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:text="Kelurahan"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinKelurahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>


    <Button
        android:id="@+id/btnRegister"
        style="@style/loginButton"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="Register" />



</LinearLayout>

</androidx.cardview.widget.CardView>

    </ScrollView>