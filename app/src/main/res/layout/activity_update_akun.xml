<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateAkun">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ic_akun"
                android:layout_width="280px"
                android:layout_height="280px"
                android:layout_gravity="center"
                android:src="@drawable/ic_akun_black" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/Foto" android:layout_width="280px"
                android:layout_height="280px"
                android:layout_gravity="center"
                android:src="@drawable/ic_akun_black" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnGantiFoto"
            android:text="Ganti Foto Profile"
            android:textColor="@color/primaryTextColor"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Nama"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNama"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Jenis Kelamin"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinJenkel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:text="No Hp"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNohp"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Email"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Moto"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtMoto"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Tentang"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtTentang"
            style="@style/modifiedEditText"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/btnSimpanAkun"
            style="@style/loginButton"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="Simpan" />

        <RelativeLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_height="match_parent"
            >
        </RelativeLayout>

    </LinearLayout>
</ScrollView>