<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp">

        <TextView
            android:text="Nama Bahan Baku"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNamaBB"
            style="@style/modifiedEditText"
            android:inputType="text"
            android:textSize="15sp"
            android:maxLines="1"/>

        <TextView
            android:text="Jenis Bahan Baku"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinJenis"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:text="Sumber"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinSumber"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:text="Jumlah Kebutuhan"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtJmlh"
            style="@style/modifiedEditText"
            android:textSize="15sp"
            android:inputType="text"
            android:maxLines="1"/>

        <TextView
            android:text="Nilai Bahan Baku (Dalam Rp)"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtNilaiBB"
            style="@style/modifiedEditText"
            android:textSize="15sp"
            android:inputType="text"
            android:maxLines="1"/>

    <TextView
        android:text="Tahun"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtTahun"
        style="@style/modifiedEditText"
        android:textSize="15sp"
        android:inputType="text"
        android:maxLines="1"/>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUpdate"
            android:textColor="@color/white"
            android:text="Simpan"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:background="@color/primaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnHapus"
            android:textColor="@color/white"
            android:text="Hapus"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    </LinearLayout>
